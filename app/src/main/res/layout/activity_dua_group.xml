<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_dua_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_main_bg"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/material_sub_bg"
        android:elevation="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-medium"
                android:text="DEEN ADKHAR"
                android:textColor="@color/material_sub_bg_text"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <HorizontalScrollView
        android:id="@+id/options_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/material_sub_bg"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <FrameLayout
                android:id="@+id/option_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_option_selected"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/img_option_grid"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_dialer"
                    android:tint="@color/red_700" />
            </FrameLayout>

            <TextView
                android:id="@+id/option_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="LISTS"
                android:textColor="@color/material_sub_bg_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/option_bookmark"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:padding="12dp"
                android:src="@android:drawable/btn_star_big_off"
                android:tint="@color/material_sub_bg_text" />

            <ImageView
                android:id="@+id/option_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:padding="12dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="@color/material_sub_bg_text" />
        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/duaListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:visibility="gone" />

        <GridView
            android:id="@+id/duaGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:padding="8dp"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"
            android:visibility="visible" />

    </FrameLayout>

</LinearLayout>