<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:layout_margin="4dp"
    android:background="@drawable/bg_hijrah_day"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="6dp">

    <TextView
        android:id="@+id/tv_hijrah_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_sub_bg_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_gregorian_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hijrah_gregorian_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_hijrah_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_700"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>
